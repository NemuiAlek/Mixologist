<h2>Edit Ingreident</h2>

<div>
<form action="/ingredients/{{ingredient.id}}" method="post">

<label for ="name">Name</label>
    <input type:"text" name="name" value="{{ingredient.name}}">

<br><br>

<label for="type">Type</label>
<select name="type" id="type" select= multiple >
        {{#each ingredients}}]
        <option value="{{this._id}}">{{this.type}}</option>
        {{/each}}
</select>

<br><br>

<label for ="description">Description</label>    
     <input type:"text" name="description" value="{{ingredient.description}}">

<br><br>

<label for ="url">Website to Purchase</label>
    <input type:"text" name="url" value="{{ingredient.url}}">

<br><br>

<label for ="price">Price</label>
    <input type:"text" name="price" value="{{ingredient.price}}">

<br><br>

<div>
Picture
   <input type="file" name="ingIMG" accept="image/png, image/gif, image/jpeg">
</div>

<br><br>

<button type ="submit">Edit</button>
</form>
</div>