
<h2>My Bar<span>Welcome back {{theUser.username}}</span></h2>
<br>

 <div class="container">

<div class="profile-photo">
{{#if theUser.image}}
<img src="{{theUser.image}}" alt="" class="profileImgMedium">
{{/if}}
{{#unless theUser.image}}
<img src='/images/noProfileImage.png' alt="" class="profileImgMedium">
{{/unless}}
</div>

<div class="profile-name">{{theUser.username}}
    </div>
    <h4>Liked Cocktails:</h4>
    <h4>Linked email: {{theUser.email}}</h4>  
</div>



<form class="update-btn"action="/update-profile-image" method="post" enctype="multipart/form-data">
<div>
    <input type="file" name="profileIMG" accept="image/png, image/gif, image/jpeg">
</div>
<button>Update Image</button>
</form>

<div>

</div>

</div>

<footer class="settings-btn">
    <h4>Settings</h4>
    <select name="settingsList" id="settingsList" onchange="location = this.value;">
        <option value="" selected disabled hidden>Select an Option</option>
        <option value="/change-password">Change Password</option>
        <option value="/change-email">Change Email</option>
        <option value="/inactivateUser">Inactivate Account</option>
    </select>
</footer>