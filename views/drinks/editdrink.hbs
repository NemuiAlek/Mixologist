<h2>Edit Drink</h2>

<div>
<form action="/drinks/{{drink.id}}" method="post">

<label for ="name">Cocktail Name</label>
    <input type:"text" name="name" value="{{name}}">

<br><br>

<label for="tools">Tools Needed</label>
<select name="tools" id="tools"> 
<option value="{{tools}}" selected disabled hidden>{{tools}}</option>
    <option value="Shaker Tin">Shaker Tin</option>
    <option value="Muddler">Muddler</option>
    <option value="Bar Spoon">Bar Spoon</option>
    <option value="Jigger">Jigger</option>
    <option value="Strainer">Strainer</option>
    <option value="Mesh Strainer">Mesh Strainer</option>
    <option value="Other">Other</option>
</select>

<br><br>

<label>Ingredients</label> <select name="ingredients" id="ingredients" select="multiple">
    <option value=""></option>
    {{#each ing}}
        <option value ="{{this._id}}">{{this.name}}</option>
    {{/each}}
    </select>
    <br>
<br>

<label>Liquors</label> <select name="liquors" id="liquors" select="multiple">
    <option value=""></option>
    {{#each liquor}}
        <option value ="{{this._id}}">{{this.name}}</option>
    {{/each}}
    </select>
    <br>
<br>

<label for="glasswear">Glasswear</label>
<select name="glasswear" id="glasswear">
    <option value="{{glasswear}}" selected disabled hidden>{{glasswear}}</option>
        <option value="Highball">Highball</option>
        <option value="Mug">Mug</option>
        <option value="Rocks Glass">Rocks Glass</option>
        <option value="Tumbler">Tumbler</option>
        <option value="Martini Glass">Martini Glass</option>
        <option value="Margarita Glass">Margarita Glass</option>
        <option value="Hurricane Glass">Hurricane Glass</option>
        <option value="Shooter">Shooter</option>
        <option value="Snifter">Snifter</option>
        <option value="Collins">Collins</option>
        <option value="Pint">Pint</option>
        <option value="Flute">Flute</option>
        <option value="Nick and Nora Glass">Nick and Nora Glass</option>
        <option value="Wine Glass">Wine Glass</option>
        <option value="Other">Other</option>
</select>

<br><br>

<label for ="instructions">Instructions</label>    
     <input type:"text" name="instructions" value="{{instructions}}">

<br><br>

<label for ="description">Description</label>    
<input type:"text" name="description" value="{{description}}">

<br><br>

<label for ="url">Original Website (optional)</label>
    <input type:"text" name="url" value="{{url}}">

<br><br>

<div>
Picture
   <input type="file" name="drinkIMG" accept="image/png, image/gif, image/jpeg">
</label>
</div>

<br><br>

<label for ="tags">Tags</label>
    <input type:"text" name="tags" value="{{tags}}">

<br><br>

<button type ="submit">Edit</button>
</form>
</div>

<form action="/drinks/{{id}}/cancel" method="get">
<button type="submit">Cancel</button>
</form>